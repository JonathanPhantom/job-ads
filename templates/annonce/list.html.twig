{% extends 'base.html.twig' %}

{% block title 'Rechercher une annonce - Job-Ads' %}

{% block body %}
    {{ include('fragments/_navCandidat.html.twig') }}

    <div class="bg-secondary mt-4 text-light" style="height: 50px">
        <div class="container-fluid d-flex row">

            <a class="btn col-md-2"><img src="{{ asset('images/filter.png') }}" style="height: 28px" alt="filter">
                Filtres</a>

            <form method="GET" class="col-md-6 mt-1 container">
                <div class="row">
                    {{ form_start(form) }}
                    <div class="col ml-0 mr-0" style="padding-left: 0; ">
                        <button class="btn btn-block" style="background-color: #DB7300;">Rechercher</button>
                    </div>
                    <div class="col-md-5 mr-0" style="">
                        {{ form_row(form.domaineEtude) }}
                    </div>
                    <div class="col-md-5 mr-0" style="padding-left: 0">
                        {{ form_widget(form.localites) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </form>
        </div>
    </div>
    <main class="" style="flex: 1 0 auto;margin-right: 10%;margin-left:10%;max-width: 1250px;padding: 20px">
        <div class="row">
            <div class="col-md-4">
                <div style="overflow-x: hidden;overflow-y: hidden">
                    <div class="container">
                        <div class="mb-4">
                            {% for annonce in annonces %}
                                <form method="post" action="{{ path('app_annonce_show_id',{id:annonce.id}) }}" id="form-sumibtted_{{ annonce.id }}" >
                                </form>
                                <a href="#">
                                <section class=""
                                         style="border-left: 4px solid #DB7300;padding-left: 16px;cursor: pointer; background-color: #fff;"
                                         onclick="showDetails({{ annonce.id }})">
                                    <div class="flex-row justify-content-between">
                                        <div class="" style="max-width: 200px;flex: 1 1 auto">
                                            <header class="mb-0">
                                                <h2>
                                                    <a style="
                                                color: #DB7300;
                                                text-decoration: none;
                                                font-weight: 500;
                                                font-size: 14px;
                                                word-break: break-word;
                                                word-wrap: break-word;
                                                line-height: 1.4">{{ annonce.titreAnnonce }}</a>
                                                </h2>
                                            </header>
                                            <div>
                            <span class="mr-5 d-inline-block mb-0"
                                  style="color: rgb(158,158,158);">{{ annonce.proprietaire.nomEntreprise }}</span>
                                                <ul style="margin-right: -4px;list-style: none;padding-left: 0"></ul>
                                            </div>
                                            <div class="d-flex">
                            <span style="color: rgb(158,158,158);word-break: break-word;word-wrap: break-word;max-width: 100%">

                            </span>{{ annonce.proprietaire.localite.value }}
                                            </div>

                                        </div>
                                        <div class="dropdown-divider"></div>
                                    </div>
                                </section>
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            {% if annonce is defined %}
            <div class="col-md-8 p-0">
                <div style="height: 138px;margin-bottom: 12px">
                    <div class="bg-light">
                        <header class="text-dark d-flex align-items-center justify-content-start" style="font-size: 14px;font-weight: 400;
                            line-height: 1.5">
                            <div class="ml-3" style="
                            height: 94px;
                            padding: 4px;
                            width: 186px;
                            margin-right: 20px;
                            left: 28px;
                            position: relative;">
                                <img src="{{ vich_uploader_asset(annonce.proprietaire) }}" alt="logo-{{annonce.proprietaire.nomEntreprise}}" style="
                                    left: 30%;
                                    position: absolute;
                                    top: 48%;
                                    transform: translate(-50%,-50%);
                                    border: 4px solid transparent;
                                    display: block;
                                    height: 90px;
                                    max-height: 100%;
                                    max-width: 100%;
                                    width: 186px;
                                    vertical-align: middle;">
                            </div>
                            <div style="flex: 1 1 auto;margin-right: 20px">
                                <h1 class="text-dark" style="
                                    font-size: 20px;
                                    line-height: 1.4;
                                    font-weight: 400;
                                    margin-top: 5px;
                                    margin-left: 0;
">{{ annonce.titreAnnonce}} at {{ annonce.proprietaire.nomEntreprise }}
                                </h1>
                                <h2 class="text-left" style="font-size: 20px;
                                    line-height: 1.4;
                                    font-weight: 400;
                                    margin-top: 10px;
                                    margin-left: 0;
                                    ">{{ annonce.proprietaire.adresse }}
                                </h2>
                            </div>
                            <div style="
                            margin-left: -10px;
                            position: relative;
                                top: -17px;
                                right: 15px;">
                                <a href="{{ path('app_candidat_postuler',{id:annonce.id}) }}" class="btn btn rounded-0" style="background-color: #DB7300">Postuler</a>
                            </div>
                        </header>
                    </div>
                </div>
                <div class="bg-light text-dark pl-4 pr-4 mx-auto" style="width: 100%">
                    <div>
                        {{ annonce.description|raw }}
                    </div>
                    <div class="text-right mt-4 pb-2">
                        <a href="{{ path('app_annonce_signaler',{ id:annonce.id }) }}" class=" btn btn-danger h6">Signaler l'annnonce</a>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </main>

{% endblock %}

{% block javascripts %}

    <script>
        function showDetails(id){
            document.getElementById("form-sumibtted_"+id).submit();
        }
    </script>
{% endblock %}

