{% extends 'base.html.twig' %}
{% block title %}
    Affichage candidats
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        tbody:before {
            content: "@";
            display: block;
            line-height: 10px;
            text-indent: -99999px;
        }
    </style>
{% endblock %}
{% block body %}
    {{ include('fragments/_navEntreprise.html.twig') }}
    <div class="container  mt-4">
        <h3>Liste des candidatures à l'annonce {{ annonce.titreAnnonce }}</h3>
        {% if annonce.candidatures.count > 0 %}
            <table class="table table-striped" id="mytable">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Tel</th>
                    <th>Adresse</th>
                    <th>CV</th>
                    <th>Contacter</th>
                </tr>
                </thead>

                {% for candidat in recommanded %}
                    {% if loop.first %}
                        <tbody class="border-success border mt-2">
                    {% endif %}
                    <tr>
                        <td>{{ candidat.nom }}</td>
                        <td>{{ candidat.prenom }}</td>
                        <td>{{ candidat.email }}</td>
                        <td>{{ candidat.telephone }}</td>
                        <td>{{ candidat.localite.getValue() }}</td>
                        <td><a href="{{ path('app_candidat_cv_show',{id:candidat.id,annonce_id:annonce.id}) }}"
                               class="btn btn-primary">Voir le CV</a>
                        </td>
                        <td>
                            <a href="{{ path('app_recruteur_contact_entretien', {id:candidat.id, annonce_id: annonce.id}) }}"
                               class="btn btn-success">Contacter pour Entretien</a>

                        </td>
                    </tr>
                    {% if loop.last %}
                        </tbody>
                    {% endif %}
                {% endfor %}
                <tbody>

                {% for candidat in candidats %}
                    <tr>
                        <td>{{ candidat.nom }}</td>
                        <td>{{ candidat.prenom }}</td>
                        <td>{{ candidat.email }}</td>
                        <td>{{ candidat.telephone }}</td>
                        <td>{{ candidat.localite.getValue() }}</td>
                        <td><a href="{{ path('app_candidat_cv_show',{id:candidat.id,annonce_id:annonce.id}) }}"
                               class="btn btn-primary">Voir le CV</a></td>
                        <td>
                            <a href="{{ path('app_recruteur_contact_entretien', {id:candidat.id, annonce_id: annonce.id}) }}"
                               class="btn btn-success">Contacter pour Entretien</a>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="alert alert-dismissible alert-warning">
                <p>Aucune Candidatures à cette annonce</p>
            </div>
        {% endif %}
    </div>
    {# {% if annonce.candidatures.count > 0 %} #}
